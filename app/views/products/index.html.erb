<div class="container">

 <h2>All Books</h2>

 <% if current_user %>
  <h3>Current user: <%= current_user.email %> </h3>
 <% end %>

  <% @products.each_slice(3) do |three_products| %>
    <div class="row">
      <% three_products.each do |product| %>
        <div class="col-md-4 col-sm-4">
          <div class="well">
             <a href="/products/<%= product.id %>" title="View Product"><img src="<%= product.images.first.url %>" alt="<%= product.name %>" class="img-responsive product_single_image" style="width:225px;height:350px"></a>
            <br><br>
            <a href="/products/<%= product.id %>"><%= product.name %></a>
            <p><%= product.description %></p> 
            <p><%= product.price %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>


</div>


             
            